		fi
		cat $file | grep "^#"
		if [ $SHOWDIFF -eq 1 ]; then
		    diff $RESULTSDIR/$file\test $RESULTSDIR/$file\comp
		fi
	    fi
	fi
	if [ $SHOWGRIND -eq 1 ]; then
	    cat $RESULTSDIR/$file\valgrind
	fi
	echo ----------------------------------------------------
	if [ $SHOWDIFF -eq 1 ]; then
	    echo ====================================================
	    echo ----------------------------------------------------
	fi
    done
fi

