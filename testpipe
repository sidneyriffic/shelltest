	    if [ $? -gt 127 ]; then
		echo "Segfault or core dump error (exit > 127)" >> $RESULTSDIR/$file\test
	    fi
	    if [ $DOVALGRIND -eq 1 ]; then
		`cat $file | cut -f 1` | paste -d ' ' - $file | cut -f 1,3- -d ' ' | grep -v "^#" | $VALGRINDIT$RESULTSDIR/$file\valgrind $TESTSHELL > /dev/null 2>&1
	    fi
